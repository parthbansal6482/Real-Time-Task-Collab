{
    "name": "taskflow-backend",
    "version": "1.0.0",
    "description": "Real-Time Task Collaboration Platform â€” Backend API",
    "main": "dist/server.js",
    "scripts": {
        "dev": "nodemon",
        "build": "tsc",
        "start": "node dist/server.js",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:deploy": "prisma migrate deploy",
        "prisma:seed": "ts-node prisma/seed.ts",
        "prisma:studio": "prisma studio",
        "test": "jest --forceExit --detectOpenHandles",
        "test:coverage": "jest --coverage --forceExit --detectOpenHandles",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "keywords": [
        "task",
        "collaboration",
        "real-time",
        "api"
    ],
    "license": "MIT",
    "dependencies": {
        "@prisma/client": "^6.4.1",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "express-async-errors": "^3.1.1",
        "express-rate-limit": "^7.5.0",
        "express-validator": "^7.2.1",
        "helmet": "^8.0.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "socket.io": "^4.8.1",
        "winston": "^3.17.0",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.13.4",
        "@types/supertest": "^6.0.2",
        "eslint": "^9.20.0",
        "jest": "^29.7.0",
        "nodemon": "^3.1.9",
        "prettier": "^3.5.1",
        "prisma": "^6.4.1",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.3"
    },
    "prisma": {
        "seed": "node dist/prisma/seed.js"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts",
        "exec": "ts-node src/server.ts"
    }
}