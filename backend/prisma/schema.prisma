generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// Application user — owns boards, creates tasks, receives assignments
model User {
  id           String   @id @default(uuid())
  email        String   @unique
  username     String   @unique
  passwordHash String   @map("password_hash")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  ownedBoards     Board[]          @relation("BoardOwner")
  boardMembers    BoardMember[]
  createdTasks    Task[]           @relation("TaskCreator")
  taskAssignments TaskAssignment[]
  activities      Activity[]

  @@map("users")
}

/// Collaboration board — contains lists, tasks, and members
model Board {
  id          String   @id @default(uuid())
  name        String
  description String?
  color       String   @default("#6366f1")
  ownerId     String   @map("owner_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  owner      User          @relation("BoardOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members    BoardMember[]
  lists      List[]
  activities Activity[]

  @@index([ownerId])
  @@map("boards")
}

/// Many-to-many join: which users are members of which boards
model BoardMember {
  id       String   @id @default(uuid())
  boardId  String   @map("board_id")
  userId   String   @map("user_id")
  role     String   @default("member") // "owner" | "member"
  joinedAt DateTime @default(now()) @map("joined_at")

  board Board @relation(fields: [boardId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([boardId, userId])
  @@index([userId])
  @@index([boardId])
  @@map("board_members")
}

/// Kanban list within a board (e.g. "To Do", "In Progress", "Done")
model List {
  id        String   @id @default(uuid())
  name      String
  boardId   String   @map("board_id")
  position  Int
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  board Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  tasks Task[]

  @@index([boardId])
  @@map("lists")
}

/// Individual task card within a list
model Task {
  id          String    @id @default(uuid())
  title       String
  description String?
  listId      String    @map("list_id")
  position    Int
  priority    String    @default("medium") // "low" | "medium" | "high"
  status      String    @default("active") // "active" | "completed"
  createdById String    @map("created_by")
  dueDate     DateTime? @map("due_date")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  list        List             @relation(fields: [listId], references: [id], onDelete: Cascade)
  createdBy   User             @relation("TaskCreator", fields: [createdById], references: [id])
  assignments TaskAssignment[]

  @@index([listId])
  @@index([createdById])
  @@map("tasks")
}

/// Many-to-many: task ↔ user assignment
model TaskAssignment {
  id         String   @id @default(uuid())
  taskId     String   @map("task_id")
  userId     String   @map("user_id")
  assignedAt DateTime @default(now()) @map("assigned_at")

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([taskId, userId])
  @@index([userId])
  @@index([taskId])
  @@map("task_assignments")
}

/// Audit log entry — records every significant action on a board
model Activity {
  id         String   @id @default(uuid())
  boardId    String   @map("board_id")
  userId     String   @map("user_id")
  actionType String   @map("action_type") // created, updated, deleted, moved, assigned, unassigned
  entityType String   @map("entity_type") // task, list, board, member
  entityId   String   @map("entity_id")
  metadata   Json?
  createdAt  DateTime @default(now()) @map("created_at")

  board Board @relation(fields: [boardId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id])

  @@index([boardId, createdAt])
  @@index([userId])
  @@map("activities")
}
